<%- include('partials/head') %>
  </head>
  <body
    class="bg-gray-50 min-h-screen flex flex-col items-center justify-start px-4 py-8 space-y-10"
  >
    <!-- Header with navigation -->
   <%- include('partials/nav') %>
    <!-- Main content -->
    <main
      class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-8 text-center space-y-6"
    >
      <h1 class="text-4xl font-bold text-blue-600">Welcome to Airbnb</h1>
      <p class="text-gray-600">Find your next stay or become a host!</p>

      <div class="space-y-4">
        <% homes.forEach(home => { %>
        <div class="p-4 bg-gray-100 rounded-lg shadow text-left transition-shadow hover:shadow-2xl">
          <h2 class="text-lg font-semibold text-gray-800  ">
            <%= home.houseName %>
          </h2>
        </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
